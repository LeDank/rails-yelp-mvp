<h1><%= @restaurant.name %></h1>
<h3><%= @restaurant.category %></h3>
<h3><%= @restaurant.phone_number %></h3>
<h3><%= @restaurant.address %></h3>
  <%= link_to new_restaurant_review_path(@restaurant) do %>
  <div>Ajouter review</div>
  <% end %>

  <div class="reviews_block">
    <h2>Commentaires :</h2>
    <p><% @restaurant.reviews.each do |review| %></p>
    <p><%=review.content%></p>
    <p><%=review.rating%>/5</p>
    <% end %>
  </div>

<%= link_to 'Accueil', restaurants_path(@restaurant) %>
