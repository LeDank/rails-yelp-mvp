<h1> Ajouter un restaurant </h1>
<form action="/restaurants" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="name">Name: </label>
  <input type="text" name="restaurant[name]" id="name">

  <label for="name">Adresse: </label>
  <input type="text" name="restaurant[address]" id="address">

  <label for="name">Category: </label>
  <input type="text" name="restaurant[category]" id="category">

  <label for="name">Phone: </label>
  <input type="text" name="restaurant[phone_number]" id="phone_number">

  <input type="submit">
</form>

<%= link_to 'Accueil', restaurants_path(@restaurant) %>
